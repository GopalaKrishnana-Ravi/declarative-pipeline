def maven_dir = "/Hello_world"
pipeline {
    agent {
        label 'QA'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/GopalaKrishnana-Ravi/declarative-pipeline.git'
            }
        }
    }

    stages {
        stage ('maven build') {
            step {
                dir("$(maven_dir)") {

                    mvn clean install
                }
            }
        }
    }
}