def maven_dir = "Hello_world"

pipeline {
    agent {
        label 'QA'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/GopalaKrishnana-Ravi/declarative-pipeline.git'
            }
        }

        stage('Maven build') {
            steps {
                script {
                    
                    dir(maven_dir) {
                        sh 'mvn clean install'
                    }
                }
            }
        }
    }
}
